{
  "name": "home-server-monitor",
  "version": "0.1.0",
  "description": "Enterprise-grade TrueNAS monitoring with AI assistance",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:client": "pnpm --filter home-server-monitor-ui dev",
    "build": "tsc -p tsconfig.build.json",
    "build:client": "pnpm --filter home-server-monitor-ui build",
    "build:all": "pnpm run build && pnpm run build:client",
    "start": "NODE_ENV=production node dist/server.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:client": "pnpm --filter home-server-monitor-ui type-check",
    "lint": "biome lint src",
    "lint:fix": "biome check --write src",
    "lint:watch": "nodemon --watch src --ext ts --exec 'pnpm run lint'",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "check": "biome check --write src",
    "check:ci": "biome ci src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "pnpm run test && pnpm run test:e2e",
    "test:ci": "pnpm run lint && pnpm run type-check && pnpm run test:coverage",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "rm -f data/*.db && pnpm run db:migrate && pnpm run db:seed",
    "db:backup": "bash scripts/backup-database.sh",
    "env:encrypt": "dotenvx encrypt",
    "env:decrypt": "dotenvx decrypt",
    "env:vault:status": "dotenvx vault status",
    "docker:build": "docker build -t home-server-monitor .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docs:generate": "typedoc --out docs/api src",
    "health": "curl -s http://localhost:3100/health | jq",
    "metrics": "curl -s http://localhost:3100/metrics",
    "logs:tail": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "clean:all": "pnpm run clean && rm -rf node_modules",
    "security:scan": "pnpm audit",
    "security:fix": "pnpm audit fix",
    "outdated": "pnpm outdated",
    "update:check": "ncu",
    "update:interactive": "ncu -i",
    "validate": "pnpm run lint && pnpm run type-check && pnpm run test",
    "check:all": "pnpm run lint && pnpm run type-check && pnpm test",
    "check:quick": "pnpm run lint && pnpm run type-check",
    "dev:debug": "NODE_ENV=development DEBUG=* tsx watch src/server.ts",
    "logs:follow": "tail -f logs/server.log",
    "health:check": "curl -s http://localhost:3100/health | jq",
    "prepare": "husky",
    "precommit": "lint-staged",
    "prepush": "pnpm run type-check && pnpm test"
  },
  "keywords": [
    "truenas",
    "monitoring",
    "typescript",
    "fastify",
    "mcp",
    "ai"
  ],
  "author": "Home Server Monitor",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@fastify/caching": "^9.0.3",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@upstash/context7-mcp": "^1.0.27",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "shadcn": "^3.5.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "type-fest": "^5.2.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  }
}
