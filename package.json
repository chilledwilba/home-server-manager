{
  "name": "home-server-monitor",
  "version": "0.1.0",
  "description": "Enterprise-grade TrueNAS monitoring with AI assistance",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:client": "cd client && npm run dev",
    "build": "tsc -p tsconfig.build.json",
    "build:client": "cd client && npm run build",
    "build:all": "npm run build && npm run build:client",
    "start": "NODE_ENV=production node dist/server.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:client": "cd client && npm run type-check",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "biome:check": "biome check --write src",
    "biome:ci": "biome ci src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "rm -f data/*.db && npm run db:migrate && npm run db:seed",
    "env:encrypt": "dotenvx encrypt",
    "env:decrypt": "dotenvx decrypt",
    "env:vault:status": "dotenvx vault status",
    "docker:build": "docker build -t home-server-monitor .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down",
    "docs:generate": "typedoc --out docs/api src",
    "security:scan": "npm audit",
    "prepare": "husky",
    "precommit": "lint-staged",
    "prepush": "npm run type-check && npm test"
  },
  "keywords": [
    "truenas",
    "monitoring",
    "typescript",
    "fastify",
    "mcp",
    "ai"
  ],
  "author": "Home Server Monitor",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "type-fest": "^5.2.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  }
}
