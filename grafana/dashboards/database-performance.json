{
  "dashboard": {
    "title": "Home Server Monitor - Database Performance",
    "tags": ["database", "performance", "queries"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(home_server_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} on {{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "s", "label": "Duration" }, { "format": "short" }]
      },
      {
        "id": 2,
        "title": "Query Rate by Operation",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "rate(home_server_db_query_duration_seconds_count[5m])",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "qps", "label": "Queries/sec" }, { "format": "short" }]
      },
      {
        "id": 3,
        "title": "Query Duration by Table",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(home_server_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "s", "label": "Duration" }, { "format": "short" }]
      },
      {
        "id": 4,
        "title": "Query Duration Percentiles",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(home_server_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, rate(home_server_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(home_server_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, rate(home_server_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "D"
          }
        ],
        "yaxes": [{ "format": "s", "label": "Duration" }, { "format": "short" }]
      },
      {
        "id": 5,
        "title": "Slowest Operations",
        "type": "table",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, rate(home_server_db_query_duration_seconds_bucket[5m])))",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
