# Server Configuration
NODE_ENV=development
PORT=3100
HOST=0.0.0.0

# TrueNAS Configuration (MOCK VALUES - replace when deploying)
TRUENAS_HOST=192.168.1.100
TRUENAS_API_KEY=mock-truenas-api-key-replace-on-deploy
TRUENAS_USERNAME=admin
TRUENAS_PASSWORD=

# Portainer Configuration (MOCK VALUES - replace when deploying)
PORTAINER_HOST=192.168.1.100
PORTAINER_PORT=9000
PORTAINER_TOKEN=mock-portainer-token-replace-on-deploy

# Database
DB_PATH=./data/monitor.db

# Security
API_TOKEN=mock-api-token-for-development-only
ENABLE_WRITE_OPERATIONS=false
REQUIRE_CONFIRMATION=true

# API Security (Phase 5: Production Readiness)
# Comma-separated list of valid API keys for regular operations
API_KEYS=your-api-key-1,your-api-key-2
# Special API key for admin operations (destructive actions)
ADMIN_API_KEY=your-admin-api-key
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3100,https://yourdomain.com

# Logging
LOG_LEVEL=info

# Monitoring Intervals (ms)
POLL_SYSTEM_INTERVAL=30000
POLL_DOCKER_INTERVAL=5000
POLL_SMART_INTERVAL=3600000

# Optional: Arr Apps (leave empty for now - configure during deployment)
SONARR_HOST=
SONARR_PORT=8989
SONARR_API_KEY=

RADARR_HOST=
RADARR_PORT=7878
RADARR_API_KEY=

PROWLARR_HOST=
PROWLARR_PORT=9696
PROWLARR_API_KEY=

# Optional: Plex (leave empty for now - configure during deployment)
PLEX_HOST=
PLEX_PORT=32400
PLEX_TOKEN=

# Optional: Alerting Services (leave empty for now - configure during deployment)
# Discord
DISCORD_WEBHOOK_URL=

# Pushover
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Optional: Local LLM (Ollama)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2:13b
OLLAMA_ENABLED=false

# MCP (Model Context Protocol) Server Configuration
MCP_ENABLED=true
MCP_REQUIRE_CONFIRMATION=true

# Optional: OpenAI/Anthropic (leave empty for now)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================================================
# Phase 8: Security Stack Configuration
# ============================================================================

# Cloudflare Tunnel (Zero-Trust Network Access)
# Get these from: https://dash.cloudflare.com/
# Tutorial: https://developers.cloudflare.com/cloudflare-one/connections/connect-networks/
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_TUNNEL_ID=

# Authentik SSO (Single Sign-On & Identity Provider)
# Deploy Authentik first, then configure these values
# Documentation: https://goauthentik.io/docs/
AUTHENTIK_URL=https://auth.yourdomain.com
AUTHENTIK_TOKEN=

# Fail2ban (Intrusion Prevention System)
# Enable if you have Fail2ban deployed (either in Docker or on host)
FAIL2BAN_ENABLED=false
FAIL2BAN_CONTAINER_NAME=fail2ban
FAIL2BAN_USE_DOCKER=true

# Infrastructure Deployment Settings
# These control how the infrastructure manager behaves
INFRASTRUCTURE_AUTO_DEPLOY=false
INFRASTRUCTURE_DRY_RUN=true

# ============================================================================
# Phase 6: UPS Integration (Optional - Network UPS Tools)
# ============================================================================

# Enable UPS monitoring (requires Network UPS Tools - NUT)
# Install NUT on TrueNAS or have a NUT server accessible
UPS_ENABLED=false

# NUT server connection details
UPS_HOST=localhost
UPS_PORT=3493
UPS_NAME=ups

# UPS monitoring thresholds
# Critical runtime: Initiate emergency shutdown when battery runtime drops below this
UPS_CRITICAL_RUNTIME=600     # 10 minutes (in seconds)

# Warning runtime: Start graceful service shutdown when runtime drops below this
UPS_WARNING_RUNTIME=1800     # 30 minutes (in seconds)

# Low battery: Generate alert when battery charge drops below this percentage
UPS_LOW_BATTERY=25           # 25%

# Enable actual shutdown actions (set to true only in production!)
# When false, shutdown procedures will be logged but not executed (safety mode)
UPS_ENABLE_SHUTDOWN=false
